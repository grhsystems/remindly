# ============================================
# Remindly Web App - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# 
# Note: In Vite, only variables prefixed with VITE_ are exposed to the client
# ============================================

# ============================================
# API Configuration
# ============================================
# Backend API URL
# Development: http://localhost:3001/api
# Production: https://api.remindly.app/api
VITE_API_URL=http://localhost:3001/api

# ============================================
# App Configuration
# ============================================
VITE_APP_NAME=Remindly
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Smart Task Management App

# ============================================
# Base URL Configuration
# ============================================
# Base URL for the application (used in router)
# Development: /
# Production: https://remindly.app
BASE_URL=/

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_PWA=true

# ============================================
# Third-Party Services (Optional)
# ============================================
# Google Analytics (if enabled)
VITE_GA_TRACKING_ID=

# Sentry Error Tracking (if enabled)
VITE_SENTRY_DSN=

# ============================================
# Development Configuration
# ============================================
# Enable debug mode
VITE_DEBUG=false
# API timeout in milliseconds
VITE_API_TIMEOUT=10000
