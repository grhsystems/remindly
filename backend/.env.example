# ============================================
# Remindly Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# Database Type: postgres, mysql, sqlite
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=remindly_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# ============================================
# JWT Authentication Configuration
# ============================================
# Generate a strong secret key (min 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_here
JWT_EXPIRE=7d
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# OpenAI Configuration (Optional)
# ============================================
# Required for AI text processing and voice transcription
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================
# Twilio Configuration (Optional)
# ============================================
# Required for SMS and phone call notifications
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# SendGrid Configuration (Optional)
# ============================================
# Required for email notifications
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@remindly.app
FROM_EMAIL=noreply@remindly.app

# ============================================
# Firebase Configuration (Optional)
# ============================================
# Required for push notifications
# Get credentials from: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
# Alternative: Firebase Server Key (for legacy FCM)
FIREBASE_SERVER_KEY=your_firebase_server_key_here

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================
# Rate Limiting Configuration
# ============================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 100 in production, 1000 in development)
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,video/mp4

# ============================================
# Logging Configuration
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Log file path
LOG_FILE_PATH=./logs/combined.log
ERROR_LOG_FILE_PATH=./logs/error.log

# ============================================
# Webhook Configuration (Optional)
# ============================================
# Webhook URL for external integrations (e.g., Integromat, Zapier)
WEBHOOK_URL=https://hook.integromat.com/your_webhook_id

# ============================================
# Redis Configuration (Optional)
# ============================================
# Required for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Email Configuration (Alternative to SendGrid)
# ============================================
# If not using SendGrid, configure SMTP directly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@remindly.app

# ============================================
# Security Configuration
# ============================================
# Enable/disable security features
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================
# Development/Testing Configuration
# ============================================
# Enable debug mode (shows detailed error messages)
DEBUG=false
# Enable API documentation
ENABLE_SWAGGER=true
